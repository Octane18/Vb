Module Module1

    Sub Main()
        Dim Str1, alpha, isPanagram As String
        Dim thisChar As Char
        Dim Count As Integer

        Str1 = ""
        alpha = ""
        isPanagram = ""
        thisChar = ""
        Count = 0

        Console.Write("Enter Str1: ")
        Str1 = Console.ReadLine
        Str1 = UCase(Str1)
        alpha = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        isPanagram = "isTrue"

        For Count = 1 To Str1.Length
            thisChar = Mid(alpha, Count, 1)
            If InStr(Str1, thisChar) = 0 Then
                isPanagram = "isFalse"
                Exit For
            End If
        Next
        If isPanagram = "isTrue" Then
            Console.WriteLine("This String contains all alphabets")
        Else : Console.WriteLine("This String does not contain all alphabets")
        End If
        Console.ReadKey()
    End Sub

End Module
